<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#333434"
        android:layout_width="match_parent"
        android:layout_height="17dp">

    </RelativeLayout>
    <RelativeLayout
        android:background="#333434"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/c_money_back"
            android:layout_width="53dp"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="收益"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/re_tt"
        android:layout_marginTop="43dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/user_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="0人"
                        android:textColor="@color/viewfinder_laser"
                        android:textSize="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="#B4B3B3"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/user_load"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="0次"
                        android:textColor="@color/primary_blue"
                        android:textSize="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="#B4B3B3"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/user_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="0人"
                        android:textColor="#00FF00"
                        android:textSize="20dp" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#B4B3B3"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="关注数"
                        android:textColor="#444444"
                        android:textSize="13dp" />
                </RelativeLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="#B4B3B3"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="下载数"
                        android:textColor="#444444"
                        android:textSize="13dp" />
                </RelativeLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="#B4B3B3"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="注册数"
                        android:textColor="#444444"
                        android:textSize="13dp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginBottom="15dp"
        android:id="@+id/card_2"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                layout="@layout/list_item"
                android:id="@+id/table_title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#B4B3B3"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.example.asus.zlzjqrcode.huadong.MyListView
                    android:id="@+id/money_list_2"
                    android:divider="#B4B3B3"
                    android:dividerHeight="1.0dip"
                    android:scrollbars="none"
                    android:cacheColorHint="@android:color/transparent"
                    android:fadingEdge="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </com.example.asus.zlzjqrcode.huadong.MyListView>
                    <TextView
                        android:background="#B4B3B3"
                        android:layout_width="match_parent"
                        android:layout_height="1dip" />
                    <include
                        layout="@layout/list_items"
                        android:id="@+id/table_title"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
