<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323233">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/shouquan_1" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="30px"
            android:orientation="vertical"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:id="@+id/re_idcard"
                android:layout_width="match_parent"
                android:layout_height="150px">
                <EditText
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:id="@+id/forget_password_import_phone"
                    android:drawablePadding="48px"
                    android:textSize="45px"
                    android:hint="请输入您的手机号"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="120px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:theme="@style/MyEditText"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="120px"
                android:layout_marginRight="120px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150px">
                    <EditText
                        android:id="@+id/yanzheng_import_text"
                        android:drawablePadding="48px"
                        android:textSize="45px"
                        android:hint="请输入验证码"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:theme="@style/MyEditText"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/forgetpassword_getmescode"
                        android:layout_width="400px"
                        android:layout_height="100px"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="0px"
                        android:text="发送验证码"
                        android:textColor="#399BFF"
                        android:textSize="45px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_delu_password"
                android:layout_width="match_parent"
                android:layout_height="150px">
                <EditText
                    android:id="@+id/login_import_dlpassword"
                    android:drawablePadding="39px"
                    android:textSize="45px"
                    android:hint="请重新设置密码"
                    android:password="true"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="120px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:theme="@style/MyEditText"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_quren_password"
                android:layout_width="match_parent"
                android:layout_height="150px">
                <EditText
                    android:id="@+id/login_import_qrpassword"
                    android:drawablePadding="39px"
                    android:textSize="45px"
                    android:password="true"
                    android:hint="请确认您的密码"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="120px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:theme="@style/MyEditText"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px">

                <Button
                    android:textSize="45px"
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="120px"
                    android:background="@drawable/round_blue"
                    android:text="登录"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
