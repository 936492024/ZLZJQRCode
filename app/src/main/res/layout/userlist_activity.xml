<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#333434"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/relativeLayout2">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout2"
            android:background="#333434">

            <RelativeLayout
                android:id="@+id/user_list_back"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="合作负责人"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/add_user"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/menu" />
            </RelativeLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:text="欢迎成都金牛——事业合伙人"
                            android:textColor="#444444"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="科尔森先生！"
                            android:textColor="#399BFF"
                            android:textSize="18dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="认证编码："
                                android:textColor="#444444"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/text_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/textView5"
                                android:layout_alignBottom="@+id/textView5"
                                android:layout_toEndOf="@+id/textView5"
                                android:layout_toRightOf="@+id/textView5"
                                android:text="XBFBI3N1A"
                                android:textColor="#399BFF"
                                android:textSize="15dp" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:visibility="gone"
             android:id="@+id/re_tt"
             android:layout_marginTop="42dp"
             android:layout_marginRight="15dp"
             android:layout_marginLeft="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="83dp"
                 >
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="0dp">
                     <RelativeLayout
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent">

                         <TextView
                             android:id="@+id/user_interest"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:text="0人"
                             android:textColor="@color/viewfinder_laser"
                             android:textSize="20dp" />
                     </RelativeLayout>
                     <View
                         android:layout_width="1dip"
                         android:layout_height="fill_parent"
                         android:background="#B4B3B3"/>
                     <RelativeLayout
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent">

                         <TextView
                             android:id="@+id/user_load"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:text="0次"
                             android:textColor="@color/primary_blue"
                             android:textSize="20dp" />
                     </RelativeLayout>
                     <View
                         android:layout_width="1dip"
                         android:layout_height="fill_parent"
                         android:background="#B4B3B3"/>
                     <RelativeLayout
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent">

                         <TextView
                             android:id="@+id/user_num"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:text="0人"
                             android:textColor="@color/colorPrimaryDark"
                             android:textSize="20dp" />
                     </RelativeLayout>

                 </LinearLayout>
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dip"
                     android:background="#B4B3B3"/>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="0dp">
                     <RelativeLayout
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:text="关注数"
                             android:textColor="#444444"
                             android:textSize="13dp" />
                     </RelativeLayout>
                     <View
                         android:layout_width="1dip"
                         android:layout_height="fill_parent"
                         android:background="#B4B3B3"/>
                     <RelativeLayout
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:text="下载数"
                             android:textColor="#444444"
                             android:textSize="13dp" />
                     </RelativeLayout>
                     <View
                         android:layout_width="1dip"
                         android:layout_height="fill_parent"
                         android:background="#B4B3B3"/>
                     <RelativeLayout
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:layout_centerVertical="true"
                             android:text="注册数"
                             android:textColor="#444444"
                             android:textSize="13dp" />
                     </RelativeLayout>
                 </LinearLayout>

             </LinearLayout>
         </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/add_rt"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/add"
                    android:layout_marginRight="15dp"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/round_blue_3"
                    android:padding="0px"
                    android:text="添加成员"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                />
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="25dp"
                android:id="@+id/card_3"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_scroll"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="33dp">

                        <TextView
                            android:id="@+id/diqu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="地区"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:textSize="17dp" />
                    </RelativeLayout>



                    <!--整体分为上下 即title和content 然后title再分左右 content再分左右-->

                    <!--上部分 title左右-->
                    <LinearLayout
                        android:id="@+id/titleLayout"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/greys"
                        >

                        <include layout="@layout/title_left"/>
                        <include layout="@layout/title_right"/>
                    </LinearLayout>
                    <!--上部分 content左右-->
                    <ScrollView android:id="@+id/contentScrollView"
                        android:scrollbars="none"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#F0F0F0"
                        >
                        <LinearLayout
                            android:id="@+id/contentLayout"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            >
                            <!--左边listview-->
                            <com.example.asus.zlzjqrcode.huadong.MyListView
                                android:id="@+id/contentListViewLeft"
                                android:divider="#B4B3B3"
                                android:dividerHeight="1.0dip"
                                android:layout_width="@dimen/leftWidth"
                                android:layout_height="fill_parent"

                                />
                            <!--右边listview-->
                            <com.example.asus.zlzjqrcode.huadong.MySyncHorizontalScrollView
                                android:id="@+id/rightContentHorscrollView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none">
                                <com.example.asus.zlzjqrcode.huadong.MyListView
                                    android:id="@+id/contentListViewRight"
                                    android:divider="#B4B3B3"
                                    android:dividerHeight="1.0dip"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    />
                            </com.example.asus.zlzjqrcode.huadong.MySyncHorizontalScrollView>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="10dp"/>-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_2"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/list_item"
                android:id="@+id/table_title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#B4B3B3"/>
            <com.example.asus.zlzjqrcode.huadong.MyListView
                android:id="@+id/list"
                android:divider="#B4B3B3"
                android:dividerHeight="1.0dip"
                android:scrollbars="none"
                android:cacheColorHint="@android:color/transparent"
                android:fadingEdge="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.example.asus.zlzjqrcode.huadong.MyListView>
            <TextView
                android:background="#B4B3B3"
                android:layout_width="match_parent"
                android:layout_height="1dip" />
            <include
                layout="@layout/list_items"
                android:id="@+id/table_title"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>
            <View
                android:id="@+id/view_view"
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <include
                layout="@layout/shiye_menu">
            </include>
            
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include layout="@layout/drawerlayout_item">
    </include>

</android.support.v4.widget.DrawerLayout>
