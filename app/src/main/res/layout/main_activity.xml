<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#333434"
        android:layout_width="match_parent"
        android:layout_height="17dp">

    </RelativeLayout>
    <RelativeLayout
        android:background="#333434"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="合作负责人"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/set"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/set" />
        </RelativeLayout>


    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:text=""
                    android:textColor="#454545"
                    android:textSize="15dp"
                    android:id="@+id/lv_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lv_name"
                    android:layout_alignStart="@+id/lv_name"
                    android:layout_below="@+id/lv_name"
                    android:layout_marginTop="10dp"
                    android:text="未登录"
                    android:textColor="#399BFF"
                    android:textSize="18dp"
                    android:id="@+id/name" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/name"
                    android:layout_alignStart="@+id/name"
                    android:layout_below="@+id/name"
                    android:text="认证编码："
                    android:textColor="#444444"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:text="XBFBI3N1A"
                    android:textColor="#399BFF"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/name"
                    android:layout_alignStart="@+id/name"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="43dp"
                    android:background="#D6D6D6" />

                <com.example.asus.zlzjqrcode.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.asus.zlzjqrcode.utils.StampView
                        android:id="@+id/StampView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:layout_widthPercent = "0.5"
                        app:layout_heightPercent = "0.5"
                        android:layout_marginRight="-8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="12dp" />

                </com.example.asus.zlzjqrcode.PercentRelativeLayout>


                <!--<TextView-->
                    <!--android:layout_marginRight="50dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_below="@+id/textView4"-->
                    <!--android:text="官方认证"-->
                    <!--android:textColor="#b70012"-->
                    <!--android:textSize="10dp" />-->
                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="27dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/code_image"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                             />

                        <Button
                            android:id="@+id/share_code"
                            android:layout_width="150dp"
                            android:layout_height="33dp"
                            android:layout_below="@+id/code_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="19dp"
                            android:background="@drawable/round_blue_2"
                            android:text="分享您的专属二维码"
                            android:textColor="@color/primary_blue" />
                    </RelativeLayout>

                </FrameLayout>


            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/money"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="收益"
                android:background="@drawable/round_blue_3"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/user_btn"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="用户"
                android:background="@drawable/round_blue_3"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
